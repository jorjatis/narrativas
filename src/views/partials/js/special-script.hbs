<script>
  document.addEventListener("DOMContentLoaded", () => {
    // Nombres mural
    const containerNames = document.querySelector(".v-spc-names");
    const names = Array.from(containerNames.querySelectorAll("span"));

    const shuffled = names.sort(() => Math.random() - 0.5);

    const totalDuration = 5000;
    const interval = totalDuration / shuffled.length;

    shuffled.forEach((name, index) => {
      setTimeout(() => {
        name.classList.add("visible");
      }, index * interval);
    });

    containerNames.querySelectorAll("span").forEach(btn => {
      btn.addEventListener("click", () => {
        const targetId = btn.getAttribute("data-target");
        const el = document.querySelector(`[popovertarget="${targetId}"]`);
        if (el) {
          el.scrollIntoView({ behavior: "smooth", block: "center" });
          el.classList.add("found");

          setTimeout(() => {
            el.classList.remove("found");
          }, 4000);
        }
      });
    });
  });
</script>